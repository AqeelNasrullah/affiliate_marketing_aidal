<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Stories</title>
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@100;200;300;400;500;600;700&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
    integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
  <link rel="stylesheet" href="OwlCarousel/dist/assets/owl.carousel.min.css">
  <link rel="stylesheet" href="OwlCarousel/dist/assets/owl.theme.default.min.css">
  <link rel="stylesheet" href="styles.css">
  <link rel="stylesheet" href="shop.css">
  <style>
    #search {
      width: 150px;
      height: 30px;
      padding-left: 10px;
      border: 1px solid gray;
      margin: 0px !important;
      border-right: none !important;
      outline: none !important;
      border-top-left-radius: 20px;
      border-bottom-left-radius: 20px;
    }

    #search-submit {
      width: 34px;
      height: 34px;
      background: transparent;
      cursor: pointer;
      border: 1px solid gray;
      margin-left: -6px;
      margin-right: 10px;
      outline: none !important;
      border-top-right-radius: 20px;
      border-bottom-right-radius: 20px;
      border-left: none !important;
    }

    .content {
      width: 1370px;
      margin: 0px auto;
    }

    .btn-more {
      border: 1px solid black;
      background: transparent;
      padding: 10px 20px;
      margin-bottom: 30px !important;
      text-decoration: none;
      color: black;
      cursor: pointer;
    }
    .btn-more:hover {
      background-color: black;
      color: white;
    }

    .owl-carousel {
      max-width: 1370px !important;
      margin: 0px auto;
    }

    .owl-carousel .item {
      padding-bottom: 50px;
    }

    .categoryy h3 {
      margin-right: 85px;
      margin-top: 135px;
    }
    .categoryy span {
      cursor: pointer;
    }

    .modal {
      z-index: 100000;
    }

    .rev-cat-sort-form {
      margin-top: 10px;
      background-image: url(https://47awq13mlhod44f65712k455-wpengine.netdna-ssl.com/wp-content/themes/revenvert/images/dropdownarrow.svg);
      background-repeat: no-repeat;
      background-position: right 20px center;
      width: 292px;
      float: right;
    }

    .justify-content-end {
      justify-content: flex-end !important;
    }

    .d-flex {
      display: flex !important;
    }

    #order {
      font-family: "GTAmerica";
      font-size: 14px;
      line-height: 14px;
      text-transform: uppercase;
      padding: 18px 65px 20px 35px;
      min-width: 292px;
      color: #7F7B76;
      border: 1px solid #7F7B76;
      border-radius: 0%;
      background-color: transparent;
      outline: none !important;
      appearance: none;
    }
    .f_widgets {
      width: 20%;
      float: left;
      padding: 30px 0px;
    }
    .f_widgets > h3 {
      color: white;
      font-weight: bold;
    }
    /****************** END MY WORK HERE **************************/
  </style>
</head>

<body>
  <div class="hero-section-stories">

    <div class="nav">
      <div class="left">
        <p><a href="/stories">Stories</a></p>
        <p><a href="/experiences">Experiences</a></p>
        <p><a href="/lifestyle">Lifestyle</a></p>
        <p><a href="/gifts">Gifts</a></p>
        <p><a href="/shobycause">Shop By Cause</a></p>

      </div>

      <div class="Mid">
        <h2><a href="/" style="text-decoration : none;">acotu</a></h2>
      </div>

      <div class="right" style="padding-right: 20px;">
        <form id="search-form" style="display: none;">
          <input type="text" placeholder="Search..." id="search">
          <button type="submit" id="search-submit"><i class="fa fa-search"></i></button>
        </form>
        <i class="fa fa-times" id="close-search" style="cursor: pointer; font-size: 20px;display: none;margin-right: 30px"></i>
        <img alt="" data-src="https://47awq13mlhod44f65712k455-wpengine.netdna-ssl.com/wp-content/themes/revenvert/images/search-b.svg" id="display-search" src="https://47awq13mlhod44f65712k455-wpengine.netdna-ssl.com/wp-content/themes/revenvert/images/search-b.svg">
      </div>
    </div>
    <div class="hr"></div>
    <div class="aboutSec">
      <div class="left-container-shop">
        <h2>stories</h2>
      </div>
    </div>


    <div style="width: 100% !important;padding: 0px 85px;box-sizing: border-box;">
      <form id="sort-form-cat" method="get" action="" class="rev-cat-sort-form d-flex justify-content-end">
        <select name="order" id="order">
          <option value="">Our Favourites</option>
          <option value="">What's New</option>
          <option value="">Price High to Low</option>
          <option value="">Price Low to High</option>
        </select>
      </form>
    </div>


    <div class="content">
        <% top_items.forEach(item => { %>
          <div class="items">
            <img src="<%= item.thumbnail %>" alt="" style="margin-bottom: 20px;"/>
            <p><%=  item.category.toUpperCase() %></p>
            <h2><%= item.title %></h2>
            <p style="margin-bottom: 30px;font-size: 15px;"><%= item.description.substring(0, 255) + '...' %></p>
            <a href="/stories/<%= item.title %>" class="btn-more">Read More</a>
          </div>
        <% }) %>
    </div>
  </div>

  <div class="categoryy" id="fashion">
    <div>
      <h3 style="font-size: 30px;float: right;"><span id="fashion-prev"><i class="fa fa-angle-left"></i></span> <span id="fashion-next"><i class="fa fa-angle-right"></i></span></h3>
      <br style="clear: both;">
    </div>
      <div class="owl-carousel" id="fashion-carousel">
        <% items.forEach(item => { %>
          <% if(item.category == "Fashion") { %>
            <div class="item">
              <img src="<%= item.thumbnail %>" alt="" style="margin-bottom: 20px;"/>
            <p><%=  item.category.toUpperCase() %></p>
            <h4 style="margin-top: 0px;"><%= item.title %></h4>
            <p style="margin-bottom: 30px;font-size: 15px;"><%= item.description.substring(0, 100) + '...' %></p>
            <a href="/stories/<%= item.title %>" class="btn-more">Read More</a>
            </div>
          <% } %>
        <% }) %>
      </div>
  </div>

  <div class="categoryy" id="lifestyle">
    <div>
      <h3 style="font-size: 30px;float: right;"><span id="lifestyle-prev"><i class="fa fa-angle-left"></i></span> <span id="lifestyle-next"><i class="fa fa-angle-right"></i></span></h3>
      <br style="clear: both;">
    </div>
      <div class="owl-carousel" id="lifestyle-carousel">
        <% items.forEach(item => { %>
          <% if(item.category == "Lifestyle") { %>
            <div class="item">
              <img src="<%= item.thumbnail %>" alt="" style="margin-bottom: 20px;"/>
            <p><%=  item.category.toUpperCase() %></p>
            <h4 style="margin-top: 0px;"><%= item.title %></h4>
            <p style="margin-bottom: 30px;font-size: 15px;"><%= item.description.substring(0, 100) + '...' %></p>
            <a href="/stories/<%= item.title %>" class="btn-more">Read More</a>
            </div>
          <% } %>
        <% }) %>
      </div>
      
  </div>

  <div class="categoryy" id="travel">
    <div>
      <h3 style="font-size: 30px;float: right;"><span id="travel-prev"><i class="fa fa-angle-left"></i></span> <span id="travel-next"><i class="fa fa-angle-right"></i></span></h3>
      <br style="clear: both;">
    </div>
      <div class="owl-carousel" id="travel-carousel">
        <% items.forEach(item => { %>
          <% if(item.category == "Travel") { %>
            <div class="item">
              <img src="<%= item.thumbnail %>" alt="" style="margin-bottom: 20px;"/>
            <p><%=  item.category.toUpperCase() %></p>
            <h4 style="margin-top: 0px;"><%= item.title %></h4>
            <p style="margin-bottom: 30px;font-size: 15px;"><%= item.description.substring(0, 100) + '...' %></p>
            <a href="/stories/<%= item.title %>" class="btn-more">Read More</a>
            </div>
          <% } %>
        <% }) %>
      </div>
      
  </div>

  <div class="categoryy" id="beauty">
    <div>
      <h3 style="font-size: 30px;float: right;"><span id="beauty-prev"><i class="fa fa-angle-left"></i></span> <span id="beauty-next"><i class="fa fa-angle-right"></i></span></h3>
      <br style="clear: both;">
    </div>
      <div class="owl-carousel" id="beauty-carousel">
        <% items.forEach(item => { %>
          <% if(item.category == "Beauty") { %>
            <div class="item">
              <img src="<%= item.thumbnail %>" alt="" style="margin-bottom: 20px;"/>
            <p><%=  item.category.toUpperCase() %></p>
            <h4 style="margin-top: 0px;"><%= item.title %></h4>
            <p style="margin-bottom: 30px;font-size: 15px;"><%= item.description.substring(0, 100) + '...' %></p>
            <a href="/stories/<%= item.title %>" class="btn-more">Read More</a>
            </div>
          <% } %>
        <% }) %>
      </div>
      
  </div>

  <div class="s_footer" style="background-color: rgba(50,50,50,1.00);">
    <div style="width: 1370px;margin: 0px auto;margin-bottom: 50px;">
      <div class="f_widgets">
        <h3>Contact Us</h3>
        <ul>
          <li><a href="">Contact Us</a></li>
          <li><a href="">About Us</a></li>
          <li><a href="">Advertising</a></li>
        </ul>
      </div>
      <div class="f_widgets">
        <h3>Info + Help</h3>
        <ul>
          <li><a href="">Privacy Policy</a></li>
          <li><a href="">Cookie Policy</a></li>
          <li><a href="">Terms &amp; Conditions</a></li>
        </ul>
      </div>
      <br style="clear: both;" />
    </div>
    <div style="width: 1370px;margin: 0px auto;">
      <p style="margin: 0px;padding: 10px 0px; color: white;font-style: italic;font-size: 15px;">&copy; <%= new Date().getFullYear() %> All Rights Reserved.</p>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <script type="text/javascript" src="./js/lifestyle.js">
  </script>
  <script src="OwlCarousel/dist/owl.carousel.min.js"></script>
  <script type="text/javascript" src="./js/stories_modal.js"></script>
  <script>
    $(document).ready(function () {
      $('#display-search').click(function () {
        $('#search-form').css('display', 'block');
        $('#close-search').css('display', 'block');
        $('#display-search').css('display', 'none');
      });
      $('#close-search').click(function () {
        $('#search-form').css('display', 'none');
        $('#close-search').css('display', 'none');
        $('#display-search').css('display', 'block');
      });

      ///////////////// FASION CAROUSEL ///////////////////////
      var fashion = $('#fashion-carousel');
      fashion.owlCarousel({
          loop:true,
          margin:10,
          dots:false,
          responsive:{
              0:{
                  items:1
              },
              600:{
                  items:3
              },
            1000:{
              items:5
            }
          }
      })
      $('#fashion-next').click(function() {
          fashion.trigger('next.owl.carousel');
      })
      $('#fashion-prev').click(function() {
          // With optional speed parameter
          // Parameters has to be in square bracket '[]'
          // fashion.trigger('prev.owl.carousel', [300]);
          fashion.trigger('prev.owl.carousel');
      })

      //////////////////// LIFESTYLE CAROUSEL ////////////////////////
      var lifestyle = $('#lifestyle-carousel');
      lifestyle.owlCarousel({
          loop:true,
          margin:10,
          dots:false,
          responsive:{
              0:{
                  items:1
              },
              600:{
                  items:3
              },
            1000:{
              items:5
            }
          }
      })
      $('#lifestyle-next').click(function() {
          lifestyle.trigger('next.owl.carousel');
      })
      $('#lifestyle-prev').click(function() {
          lifestyle.trigger('prev.owl.carousel');
      })

      //////////////////// TRAVEL CAROUSEL ////////////////////////
      var travel = $('#travel-carousel');
      travel.owlCarousel({
          loop:true,
          margin:10,
          dots:false,
          responsive:{
              0:{
                  items:1
              },
              600:{
                  items:3
              },
              1000:{
                items:5
              }
          }
      })
      $('#travel-next').click(function() {
        travel.trigger('next.owl.carousel');
      })
      $('#travel-prev').click(function() {
        travel.trigger('prev.owl.carousel');
      })

      //////////////////// BEAUTY CAROUSEL ////////////////////////
      var beauty = $('#beauty-carousel');
      beauty.owlCarousel({
          loop:true,
          margin:10,
          dots:false,
          responsive:{
              0:{
                  items:1
              },
              600:{
                  items:3
              },
              1000:{
                items:5
              }
          }
      })
      $('#beauty-next').click(function() {
        beauty.trigger('next.owl.carousel');
      })
      $('#beauty-prev').click(function() {
        beauty.trigger('prev.owl.carousel');
      })
    });
  </script>
</body>

</html>